ANAGRAM(pisanie od tyÅ‚u wyrazu)


#include<iostream>
#include<string>
using namespace std;


string A(string S) {
	string K = "";
	int L = S.length();
	for (int i = 0; i < L; i++)
		K = S[i] + K;
	return K;
}

int main(){
	
	string N;
	cout << "imie i nazwisko: ";
	getline(cin, N);
	cout << A(N) << endl;

	return 0;
}


